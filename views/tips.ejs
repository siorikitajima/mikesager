<html lang="en">
    <%- include('./partials/head.ejs')  %> 

<body>
    <%- include('./partials/nav.ejs')  %> 

    <div class="wrapper">

        <div class="fullWBanner">
            <h1>Writing Tips</h1>
        </div>

        <% tips.forEach((thetip, index) => { %>
            <% if (thetip.published == true) { %>
                <div class="content noTopMargin tipList">
                    <div class="tips">
                        <a href="/tip/<%= thetip.slug %>">
                        <div class="tip">
                            <div class="tip-thumb">
                                <% if (thetip.featimg !== '') {%>
                                    <img src="<%= thetip.featimg %>" alt="<%= thetip.title %>">
                                <% } else { %>
                                    <img src="../images/global/TheSagerGroup_Logo_white.svg" alt="TSG">
                                <% } %>
                            </div>
                            <div class="tip-text">
                                <h3><%= thetip.title %></h3>
                                <p><%= thetip.subtitle %></p>
                                <p><%= thetip.snippet %></p>
                                <div class="readBtn"><p>Read More >></p></div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <% } %>
        <% }) %>

    </div>
    
    <%- include('./partials/footer.ejs')  %> 

</body>